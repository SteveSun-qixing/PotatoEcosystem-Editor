{
  "name": "@chips/editor",
  "version": "1.0.0",
  "description": "薯片生态的卡片编辑引擎 - 用于创建和编辑卡片的核心应用",
  "type": "module",
  "main": "dist-electron/main.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently -n fs,vite -c blue,green \"npm run dev:fs\" \"npm run dev:vite\"",
    "dev:vite": "vite",
    "dev:fs": "npx tsx scripts/dev-file-server.ts",
    "dev:vite-only": "vite",
    "dev:electron": "vite --mode electron",
    "build": "vue-tsc --noEmit && vite build",
    "build:electron": "vite build && electron-builder",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.vue",
    "lint:fix": "eslint src --ext .ts,.vue --fix",
    "format": "prettier --write \"src/**/*.{ts,vue}\"",
    "format:check": "prettier --check \"src/**/*.{ts,vue}\"",
    "typecheck": "vue-tsc --noEmit",
    "clean": "rm -rf dist dist-electron node_modules/.vite"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "pinia": "^2.1.7",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "peerDependencies": {
    "@chips/components": "^0.1.0",
    "@chips/foundation": "^1.0.0",
    "@chips/sdk": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@chips/sdk": {
      "optional": true
    },
    "@chips/components": {
      "optional": true
    },
    "@chips/foundation": {
      "optional": true
    }
  },
  "devDependencies": {
    "@chips/foundation": "workspace:*",
    "@chips/sdk": "workspace:*",
    "@chips/cardto-html-plugin": "workspace:*",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.3.1",
    "@vue/test-utils": "^2.4.4",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.22.0",
    "happy-dom": "^13.6.2",
    "prettier": "^3.2.5",
    "puppeteer": "^24.36.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^1.3.1",
    "vue-tsc": "^2.0.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chips-ecosystem/chips-editor"
  },
  "keywords": [
    "chips",
    "editor",
    "card",
    "vue3",
    "typescript",
    "infinite-canvas",
    "workbench"
  ],
  "author": "Chips Ecosystem",
  "license": "MIT"
}
